<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobileApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6A98A6</item>
        <item name="colorPrimaryVariant">#6A98A6</item>
        <item name="colorOnPrimary">#6A98A6</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#6A98A6</item>
        <item name="colorSecondaryVariant">#6A98A6</item>
        <item name="colorOnSecondary">#6A98A6</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#6A98A6</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.MobileApp.Popup">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Theme.MobileApp.Button">
        <item name="colorButtonNormal">@color/lightBlue</item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>
    <style name="Theme.MobileApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MobileApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MobileApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>